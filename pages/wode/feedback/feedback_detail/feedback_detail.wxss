/* pages/wode/feedback/mysubmit/mysubmit.wxss */
@import "../../../../utils/wxParse/wxParse.wxss";

.page__detail{
    display: block;
    /* width: 100%; */
    margin:0 auto;
    background-color: #fff;
    margin-top:0.4rem;
    
}
.detail{
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.detail__title{
    font-size:40rpx;
    /* line-height: 50rpx; */
     font-weight: 400; 
     word-break:break-word; 
     width: 100%; 
    text-align: left;
}


.article__desc{
    margin: 30rpx 0;
    font-size: 16px;
}

.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}

.article__type{
   margin-right: 10rpx;
   color: #f44236;
}
.article__time{
  /* font-size:38rpx; */
  margin-right: 10rpx;
}

.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;

}

.article__content{

    font-size: 32rpx;
    color: #333;
    line-height: 42rpx;
    word-break: break-all;
    text-indent: 2em;
}



.relation__title{
    border-left: 6rpx solid #d81e06;
    padding-left: 30rpx;
    margin-bottom: 30rpx;
}

.wxParse-img{
    width: 20rem;
    height: 8rem;
    display:block;
}

.article__desc{
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #ccc;
}

.fenge{
  width: 100%;
  height: 30rpx;
  background: rgb(238,238,238); 
}
.answer{
  margin: 10rpx 10rpx;
}
.answer text{
  height: 30rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx; 
  margin: 20rpx 20rpx;
  border-left: 5rpx solid #f44236; 
  
}
.answer_list{
  border-top: 2rpx solid rgb(238,238,238);   
}