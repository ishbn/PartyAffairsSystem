/* pages/organization/eventAlbum/eventAlbum.wxss */
.index{
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.header{
  display: flex;
  background-color: #F5F5F5;
}

.fold{
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  padding-left: 5%;
  padding-right: 5%;
}

.foldimg{
  width: 45rpx;
  height: 45rpx;
}

.searchfa{
   display: flex;
   align-items: center;
}

.search{
  display: flex;
  flex-wrap: nowrap; 
  font-size: 32rpx;
  height: 53rpx;
  width: 580rpx;
  border: 2rpx solid gainsboro;
  border-radius: 10rpx;
}

.searchicon{
  padding-left: 20rpx;
  padding-right: 10rpx;
  padding-top: 10rpx;
}

.searchinput{
  padding-left: 10rpx;
}


.foldContent{
  flex-wrap: wrap;
  width: 100%;
  height: 150rpx;
  background-color: whitesmoke;
}

.title{
  font-size: 32rpx;
  width: 100%;
  padding-left: 37rpx;
}

.spaciesbtn{
  width: 140rpx;
  height: 75rpx;
  font-size: 32rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.contentBody{
  display: flex;
  flex-wrap: wrap;
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}

.contentTitle{
  font-weight: bold;
  font-size: 34rpx;
}

.contentTime{
  font-size:28rpx;
  color: gray;
  padding-top: 10rpx;
  width: 100%;
}

.contentIndex{
  display: flex;
  width: 100%;
}

.left{
  width: 70%;
  padding-right: 1%;
}

.leftimg{
  width:100%;
  height: 350rpx;
}

.right{
  display: flex;
  width: 29%;
  flex-wrap: wrap;
}

.rightimg{
  width: 100%;
  height: 175rpx;
}

.coverageArea{
  width: 100%;
  height: 175rpx;
}

.num{
  height: 175rpx;
  background-color: rgba(213, 213, 195, 0.5);
  color: white;
  font-size: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
