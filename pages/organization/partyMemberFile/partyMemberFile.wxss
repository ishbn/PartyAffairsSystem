.mugshot{
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx auto;
}

.msimg{
  width: 180rpx;
  height: 180rpx;
  border-radius: 100rpx;
}

.partybranch{
  font-size: 26rpx;
  text-align: center;
  padding-top: 20rpx;
  color: yellowgreen;
}

.content{
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.unmodifiable{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 13rpx;
  border-bottom: 2rpx solid whitesmoke;
}
.left{
  font-size: 30rpx;
}

.right{
  width: 38%;  
  font-size: 27rpx;
  word-wrap:break-word;
  color: gray;
}

.rightcontent{
  /* 防溢出，限制行数 */
  overflow: hidden;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}




