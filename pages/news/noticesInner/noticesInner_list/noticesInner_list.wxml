<!--pages/news/notices/notices_list/notices_list.wxml-->
<!-- 顶部 -->
<view class='header'>
    <!-- 分类折叠选项卡 -->
    <view class='fold' catchtap='foldclick' data-show='{{isShow}}'>
      <image class='foldimg' src='{{foldimg}}' data-show='{{isShow}}'></image>
    </view>

  <!-- 搜索框 -->
  <view class='searchfa'>
    <view class='search'>
      <icon class='searchicon' size='17' type='search'></icon>
      <input class='searchinput' type='text' confirm-type='search' placeholder='输入标题搜索'></input>
    </view>
  </view>
</view>

<!-- 折叠内容 -->
<view class='foldContent' style='display:{{isShow}}'>

  <view class='title'>
  <text>分类</text>
  </view>

  <view class='species' catchtap='selectspecies' wx:for='{{species}}' wx:key="*this">
    <button class='spaciesbtn' data-targetword='{{item.targetword}}'>{{item.btnName}}</button>
  </view>

</view>

<view class="page">  
  <!--顶部导航栏-->  
  <view class="swiper-tab">  
    <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>  
    <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">优秀党员</view>  
    <view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">预备党员</view>  
  </view>  
  
  <!--内容主体-->  
  <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange" style='height:{{notices_list.length*160}}rpx;'>  
    <!--全部通知-->
    <swiper-item>  
      
      <view class="notices_item" wx:for="{{notices_list}}" wx:key="*this" bindtap='toDetail' data-notice_id='{{item.notice_id}}'>
            <view class='notices_month'>
                  {{item.month}}月
              <view class='notices_date'>
                  {{item.day}}
              </view>
          </view>
            <view class='notices_title'>{{item.title}}</view>
      </view>  
    </swiper-item>  

    <!--重要通知-->
    <swiper-item >  
       <view class="notices_item" wx:for="{{notices_list}}" wx:key="*this" bindtap='toDetail' data-notice_id='{{item.notice_id}}' wx:if="{{item.notices_type === '重要通知'}}">
       <!--选择重要通知进行遍历-->
        <block >
          <view class='notices_month'>
                  {{item.month}}月
              <view class='notices_date'>
                  {{item.day}}
              </view>
          </view>
            <view class='notices_title'>{{item.title}}</view>
        </block>
       </view>
    </swiper-item>  

    <!--紧急通知-->
    <swiper-item>  
      <view class="notices_item" wx:for="{{notices_list}}" wx:key="*this"  bindtap='toDetail' data-notice_id='{{item.notice_id}}'  wx:if="{{item.notices_type === '紧急通知'}}">
        <!--选择紧急通知进行遍历-->
        <block >
           <view class='notices_month'>
                  {{item.month}}月
              <view class='notices_date'>
                  {{item.day}}
              </view>
          </view>
            <view class='notices_title'>{{item.title}}</view>
        </block>
       </view>
    </swiper-item>  
  </swiper>  
</view>  
