/* pages/news/noticeInner/noticesInner_list/noticesInner_list.wxss */

.header{
display: flex;
background-color: #F5F5F5;
}

.fold{
padding-top: 18rpx;
padding-bottom: 18rpx;
padding-left: 5%;
padding-right: 5%;
}

.foldimg{
width: 45rpx;
height: 45rpx;
}

.searchfa{
display: flex;
align-items: center;
}

.search{
display: flex;
flex-wrap: nowrap; 
font-size: 32rpx;
height: 53rpx;
width: 580rpx;
border: 2rpx solid gainsboro;
border-radius: 10rpx;
}

.searchicon{
padding-left: 5%;
padding-right: 5%;
padding-top: 10rpx;
}

.foldContent{
flex-wrap: wrap;
width: 100%;
height: 150rpx;
background-color: whitesmoke;
}

.title{
font-size: 32rpx;
width: 100%;
padding-left: 37rpx;
}

.spaciesbtn{

height: 75rpx;
font-size: 32rpx;
margin-left: 10rpx;
margin-right: 10rpx;
}

.page {  
  margin-left: 10rpx;  
  margin-right: 10rpx;  
}  

.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #87CEFA;  
}  
  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15px;  
  color: #777;  
}  
  
.swiper {  
  background: #fff;  
}  
  
.on {  
  color: #00E5EE;  
  border-bottom: 5rpx solid #00E5EE;  
} 

.notices_item{
  width: 100%;
  height: 160rpx;
  border-bottom: 1rpx solid rgb(238, 238, 238);
  display: inline-flex;
}
.notices_date{
  text-align: center;
  width: 110rpx;
  height: 100%;
  border-right:1rpx solid rgb(238, 238, 238); 
}
.notices_month{
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
  color: #777;
  justify-content: center;
}
.notices_day{
  width: 100%;
  height: 40%;
  font-size: 58rpx;
  color: #00E5EE;
  display: flex;
  align-items: center;
  justify-content: center;
}
.notices_title{
  width: 100%;
  font-size: 32rpx;
  overflow: hidden;
  margin: 10rpx 10rpx 10rpx 10rpx;
  display: flex;
  align-items: center;

}