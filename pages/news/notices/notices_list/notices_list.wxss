/* pages/news/notices/notices_list/notices_list.wxss */

 


.notices_item{
  width: 100%;
  height: 160rpx;
  border-bottom: 2rpx solid rgb(238, 238, 238);
  display: inline-flex;
}
.notices_date{
  text-align: center;
  width: 110rpx;
  height: 100%;
  border-right:1rpx solid rgb(238, 238, 238); 
}
.notices_month{
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
  color: #777;
  justify-content: center;
}
.notices_day{
  width: 100%;
  height: 40%;
  font-size: 58rpx;
  color: #00E5EE;
  display: flex;
  align-items: center;
  justify-content: center;
}
.notices_title{
  width: 100%;
  font-size: 32rpx;
  overflow: hidden;
  margin: 10rpx 10rpx 10rpx 10rpx;
  display: flex;
  align-items: center;

}

.list_item{
    display: block;
    padding: 15px 15px 10px 10px;
    overflow: hidden;
    position: relative;
    cursor: default;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    border-bottom:2rpx solid rgb(238, 238, 238);
}

.list_item_images{
    float: left;
    margin-right: 10px;
}
.list_item_images image{
    display: block;
    width: 80px;
    height: 60px;
}

.list_item_text{
  overflow: hidden;
}

.list_item_text-title{
    width: 100%;
    height: 100rpx;
    font-weight: normal;
    font-size: 34rpx;
    color: #000; 

    overflow: hidden;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
    -webkit-line-clamp: 2; /** 显示的行数 **/

}

.list_item_text-date{
  font-size: 13px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.3;
  max-height: 36px\9;
}