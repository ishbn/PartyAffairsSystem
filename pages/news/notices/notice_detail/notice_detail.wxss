/* pages/news/notices/notice_detail.wxss */
@import "../../../../utils/wxParse/wxParse.wxss";

.page__detail{
    display: block;
    width: 100%;
    margin:0 auto;
    background-color: #fff;
    margin-top:0.4rem;
    
}
.detail{
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.detail__title{
    font-size:42rpx;
    line-height: 50rpx;
    font-weight: 400;
    word-break:break-word;
    width: 100%;
    text-align: left;
}


.article__desc{
    margin: 30rpx 0;
}

.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}

.article__time{
  font-size:38rpx;
  margin-right: 10rpx;
}

.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;

}

.article__content{

    font-size: 32rpx;
    color: #333;
    line-height: 42rpx;
    word-break: break-all;
    text-indent: 2em;
}


.article__icon{
  width: 42rpx;
  height: 42rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}


.detail__relation{
    margin-top: 60rpx;
    padding-bottom: 30rpx;
}
.relation__title{
    border-left: 6rpx solid #d81e06;
    padding-left: 30rpx;
    margin-bottom: 30rpx;
}

.wxParse-img{
    width: 20rem;
    height: 8rem;
    display:block;
}

.article__desc{
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #ccc;
}