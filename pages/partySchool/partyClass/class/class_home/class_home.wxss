swiper{
  width: 100%;
  height: 350rpx;
  background: -webkit-linear-gradient(top, #ff8f5b , white);
}
swiper-item{
  padding-top: 25rpx;
}
image{
  width: 600rpx;
  height: 300rpx;
  position: absolute;
}
image.active{
  transform: scale(1.2);
  transition:all .2s ease-in 0s;
}
.head{
  width: 100%;
  height:100rpx;
  color:white;
  text-align:center;
  line-height: 100rpx;
  background: -webkit-linear-gradient(top, #dc4824 , #ff8f5b);
}
.swp-info{
  width: 570rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
}
.swp-title {
  width: 100%;
  height: 40%;
  line-height: 60rpx;
  font-weight: bold;
  text-align: center;
  font-size: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.progress{
  width: 100%;
  height: 30%;
}
.under{
  width: 100%;
  height: 30%;
  display: flex;
}
.swp-end {
  width: 50%;
  height: 100%;
  line-height: 45rpx;
  color: darkgray;
  font-size: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.swp-rest {
  width: 50%;
  height: 100%;
  line-height: 45rpx;
  color: darkgray;
  font-size: 30rpx;
}
.main {
  height: 600rpx;
  width: 750rpx;
  border-bottom: 10px solid #EDECE8;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.header{
  position: relative;
  top: 15rpx;
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: red;
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-left:30rpx;
  margin-right: 30rpx;
}
.text-all{
  right: 50rpx;
  color: darkgray;
  font-size: 15px;
}
.content{
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.item{ 
  position: relative;
  top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  width: 50%;
  height: 350rpx;
}

.lastest-class_images-img{
  position: relative;
  left: 20rpx;
  width:335rpx;
  height:220rpx;
}

.lastest-class_text{
  position: relative;
  left: 20rpx;
}

.list_item_text {
  height: 80rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  width: 335rpx;
  overflow: hidden;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
}
.look{
  width: 50rpx;
  height: 40rpx;
}
.list_item_number {
  font-size: 30rpx;
  color:#bfbfbf;
  position: relative;
  left: 55rpx;
}