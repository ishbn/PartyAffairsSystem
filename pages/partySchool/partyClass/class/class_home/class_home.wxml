<view class='list'>
  <view class='main'>
  <!--头部  -->
    <view class='head'>正在学习3门课程></view>
    <!--轮播图  -->
    <swiper class="swiper" autoplay="true" previous-margin="75rpx" next-margin="75rpx" bindchange="swiperChange">
      <block class="block" wx:for="{{swiperList}}" wx:key="{{index}}">
        <swiper-item class="swiper-item" bindtap='swiperTargetTo'>
          <image src="{{item.imgUrls}}" class="slide-image {{swiperIndex == index ? 'active' : ''}}" data-targeturl='{{item.imgNavigateTo}}'/>
          <view class='swp-title' hidden="{{item.swpClass!=='swp-center'}}">
            <view class='swp-info'>{{item.info}}</view>
            <progress percent="20" show-info />
            <text class='swp-rest'>剩余{{item.rest}}课时</text>
            <text class='swp-end'>{{item.end}}</text>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!--下面  -->
  <view class='lastest-class' style='height:{{underHeight}}rpx;width:750rpx;'>
        <view class='header'>
          <text>最新课程</text>
          <text class='text-all'>全部></text>
        </view>
        <view class="content" style='height:{{height}}rpx;'>
          <view class="item" wx:for="{{lastestClassList}}" wx:key="{{index}}">
            <image src="{{item.image}}" class='lastest-class_images-img'></image>
            <view class='lastest-class_text'>
              <view class='list_item_text'>{{item.info}}</view>
              <image src='{{look}}' class='look'></image>
              <view class='list_item_number'>{{item.number}}</view>
            </view>
          </view>
        </view>
  </view>
  <view class="tabBar">
    <block wx:for='{{tabBar}}' wx:key='{{index}}'>
      <view class='function' catchtap='menuTargetTo' data-targeturl='{{item.targetPages}}'>
         <image src='{{item.image}}' class='tabBar-image'></image>
        <text class='tabBar-text'>{{item.text}}</text> 
      </view>
    </block>
  </view>
</view>