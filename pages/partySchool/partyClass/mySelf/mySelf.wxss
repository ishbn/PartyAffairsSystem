.main{
  display: flex;
  flex-wrap: wrap;
}
.head{
  width: 750rpx;
  height: 85rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  border-bottom: thin solid darkgray;  
  background: white;
}
.menu{
  width: 90%;
  height: 60%;
  background: white;
  display: flex;
}
.menu-item{
  color:#dc5739;
  border: 1rpx solid #dc5739;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  width: 50%;
  height: 100%;
}
.menu-item.active{
  background: #dc5739;
  color: white;
}
.all{
  width: 750rpx;
}
.must{
  position: relative;
  left: 3%;
  width: 97%;
  height: 150rpx;
  display: flex;
  align-items: center;
  border-bottom-style: solid;
  border-bottom-color: #eeeeee;
  border-bottom-width: 3rpx;
}
.classImg{
  width: 20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img{
  width: 130rpx;
  height: 100rpx;
}
.message{
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title{
  width: 100%;
  height: 45rpx;
  display: flex;
  align-items: center;
}
.title-text{
  font-size: 32rpx;
  width:85%;
  height: 100%;
  line-height: 50rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.title-img{
  width: 70rpx;
  height: 30rpx;
}
.intro{
  width: 100%;
  height: 45rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: darkgray;
}
.labelList{
  width: 100%;
  height: 30rpx;
  display: flex;
}
.lab{
  font-size: 25rpx;
  line-height: 30rpx;
  color: rgb(125, 125, 250);
  margin-right: 10rpx;
}
.did{
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-img{
  width: 120rpx;
  height: 110rpx;
}
.null-text{
  font-size: 30rpx;
  color: #e6e6e6;
}
.noMore{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  background: #EDECE8;
  color: darkgray;
  text-align: center;
  z-index: 0; 
}
/* 记录为空时 */
.null{
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-img{
  width: 120rpx;
  height: 110rpx;
}
.null-text{
  font-size: 30rpx;
  color: #e6e6e6;
}
