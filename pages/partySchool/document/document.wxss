.content{
  width: 700rpx;
  height: auto;
  position: relative;
  top: 25rpx;
  left: 25rpx;
}
.head{
  width: 100%;
  height: auto;
}
.under{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-wrap: wrap;
  font-size: 25rpx;
  color: darkgray;
  border-bottom: thin solid darkgray;
}
.title{
  font-size: 35rpx;
  display: flex;
  flex-wrap: wrap;
}
.number{
  display: flex;
  position: absolute;
  right: 0rpx;
}
.look{
  width: 35rpx;
  height: 25rpx;
  margin-right: 10rpx;
  position: relative;
  top: 22.5rpx;
}
/* .text{
  font-size: 30rpx;
  text-indent: 30rpx;
} */
.contain{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.text{
  width: 95%;
  height: 80%;
  font-size: 30rpx;
  text-indent: 30rpx;
  word-wrap: break-word; 
}
.footer{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
}
.inner{
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
}
.collect{
  width: 60rpx;
  height: 60rpx;
}
.pre{
  display: flex;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.next{
  display: flex;
  font-size: 30rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.footer-title{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.icon{
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: center;
}
.col{
  width: 15%;
  height: 88%;
  background: #404040;
  color: white;
  font-size: 25rpx;
  line-height: 31rpx;
  text-align: center;
  border-radius: 5rpx;
}