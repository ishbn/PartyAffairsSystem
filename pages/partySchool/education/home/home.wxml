<view class='main'>
  <view class='searchBox'>
    <view class='menu'>
    <!--菜单图标  -->
      <image class='menu-image' src='{{menu}}' bindtap="showitem"></image>
    </view>
    <!--搜索框  -->
    <view class='content'>
        <image class='img' src='/images/partySchool_icon/search.png' mode="aspectFit"></image>
      <input class='ipt' placeholder='输入标题搜索' bindinput='showClear' placeholder-style="font-size:30rpx;" confirm-type="search" value='{{inputVal}}'></input>
      <icon type='clear' size='13' hidden='{{clear}}'></icon>
    </view>
  </view>
      <!--下拉内容  -->
      <view class="{{open?'display_show':'display_none'}}">
        <button class='btn' size='mini' data-current="1" bindtap="clickTab">党章党规</button>
        <button class='btn' size='mini' data-current="2" bindtap="clickTab">三会一课</button>
        <button class='btn' size='mini' data-current="3" bindtap="clickTab">治党治国</button>
        <button class='btn' size='mini' data-current="4" bindtap="clickTab">党史</button>
      </view>
      <!--蒙层  -->
      <view class='shadow' hidden='{{!open}}' bindtap='hiddenShadow'></view>

  <view class='under'>
  <!--可滑动菜单栏  -->
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
      <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">全部</view>
      <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">党章党规</view>
      <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">三会一课</view>
      <view class="tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">治党治国</view>
      <view class="tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="clickTab">党史</view>
    </scroll-view>
    <!--菜单栏内容  -->
    <swiper class='swip' style="height:{{height}}rpx;" current="{{currentTab}}" bindchange="swiperTab">
      <swiper-item class='swiper-item'>
        <block class='block' wx:for="{{all}}" wx:key="{{index}}">
          <view class="view">
            <image class='image' src="{{item.image}}"></image>
            <text class='info'>{{item.info}}</text>
            <text class='time'>{{item.time}}</text>
          </view>
        </block>
      </swiper-item>
      <swiper-item class='swiper-item'>
        <block class='block' wx:for="{{all}}" wx:key="{{index}}" wx:if="{{item.titleType==='党章党规'}}">
          <view class="view">
            <image class='image' src="{{item.image}}"></image>
            <text class='info'>{{item.info}}</text>
            <text class='time'>{{item.time}}</text>
          </view>
        </block>
      </swiper-item>
      <swiper-item class='swiper-item'>
        <block class='block' wx:for="{{all}}" wx:key="{{index}}" wx:if="{{item.titleType==='三会一课'}}">
          <view class="view">
            <image class='image' src="{{item.image}}"></image>
            <text class='info'>{{item.info}}</text>
            <text class='time'>{{item.time}}</text>
          </view>
        </block>
      </swiper-item>
      <swiper-item class='swiper-item'>
        <block class='block' wx:for="{{all}}" wx:key="{{index}}" wx:if="{{item.titleType==='治党治国'}}">
          <view class="view">
            <image class='image' src="{{item.image}}"></image>
            <text class='info'>{{item.info}}</text>
            <text class='time'>{{item.time}}</text>
          </view>
        </block>
      </swiper-item>
      <swiper-item class='swiper-item'>
        <block class='block' wx:for="{{all}}" wx:key="{{index}}" wx:if="{{item.titleType==='党史'}}">
          <view class="view">
            <image class='image' src="{{item.image}}"></image>
            <text class='info'>{{item.info}}</text>
            <text class='time'>{{item.time}}</text>
          </view>
        </block>
      </swiper-item>
    </swiper>
    <!--底部  -->
    <view class='noMore'>没有更多了~</view>
  </view>
</view>