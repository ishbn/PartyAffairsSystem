<!--头部  -->
<view class='head'>
  <view class="menu">
      <view class="menu-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">待考</view>
      <view class="menu-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">已考</view>
  </view>
</view>
<!--下面  -->
<swiper class='swip' current="{{currentTab}}" bindchange="swiperTab">
  <swiper-item>
  <!-- 进行中的考试 -->
    <view class='under'>
      <view class='inner'>
      <!-- 一条考试 -->
        <view class='oneExam' wx:for='{{examing}}' wx:key='{{index}}' data-targeturl='' catchtap='menuTargetTo'>
        <!-- 左半部分 -->
          <view class='left'>
            <view class='title' data-targeturl='' catchtap='menuTargetTo'>{{item.examTitle}}</view>
            <view class='endTime' data-targeturl='' catchtap='menuTargetTo'>{{item.endTime}}截止</view>
          </view>
          <!-- 右半部分 -->
          <view class='right'>
            <image class='image' src='/images/partySchool_icon/doing.png' data-targeturl='' catchtap='menuTargetTo'></image>
          </view>
        </view>
      </view>
    </view>
  </swiper-item>
  <swiper-item>
  <!-- 已结束的考试 -->
    <view class='under'>
      <view class='inner'>
      <!-- 一条考试 -->
        <view class='oneExam' wx:for='{{examed}}' wx:key='{{index}}' data-targeturl='' catchtap='menuTargetTo'>
        <!-- 左半部分 -->
          <view class='left'>
            <view class='title' data-targeturl='' catchtap='menuTargetTo'>{{item.examTitle}}</view>
            <view class='endTime' data-targeturl='' catchtap='menuTargetTo'>{{item.endTime}}截止</view>
          </view>
          <!-- 右半部分 -->
          <view class='right'>
            <image class='image' src='/images/partySchool_icon/end.png' data-targeturl='' catchtap='menuTargetTo'></image>
          </view>
        </view>
      </view>
    </view>
  </swiper-item>
</swiper>
