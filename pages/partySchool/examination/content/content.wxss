.content{
  width: 750rpx;
  height: 1180rpx;
  display: flex;
  flex-wrap: wrap;
}
.head{
  width: 100%;
  height: 10%;
  background: #60a0f4;
  color: white;
  text-align: center;
  line-height: 120rpx;
  font-size: 40rpx;
}
.basic{
  width: 100%;
  height: 20%;
}
.inner{
  width: 90%;
  height: 50%;
  display: flex;
  flex-wrap: wrap;
  position: relative;
  left: 5%;
  top: 25%;
  font-size: 30rpx;
}
.total{
  width: 50%;
  height: 50%;
  display: flex;
}
.total-head{
  color: darkgray;
}
.pass{
  width: 50%;
  height: 50%;
  display: flex;
}
.pass-head{
  color: darkgray;
}
.pass-content{
  position: relative;
  left: 30rpx;
}
.count{
  width: 50%;
  height: 50%;
  display: flex;
}
.count-head{
  color: darkgray;
}
.count-content{
  position: relative;
  left: 30rpx;
}
.length{
  width: 50%;
  height: 50%;
  display: flex;
}
.length-head{
  color: darkgray;
}
.time-head{
  width: 100%;
  height: 50rpx;
  display: flex;
}
.head-line{
  width: 35%;
  height: 5rpx;
  position: relative;
  left: 4%;
  top: 12rpx;
  border-bottom: thin solid darkgray;
  border-top: thin solid darkgray;
}
.middle{
  width: 30%;
  height: 30rpx;
  background:white;
  font-size: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: darkgray;
}
.end-line{
  width: 35%;
  height: 5rpx;
  position: relative;
  right: 4%;
  top: 12rpx;
  border-bottom: thin solid darkgray;
  border-top: thin solid darkgray;
}
.time{
  width: 100%;
  height: 27%;
}
.between{
  font-size: 30rpx;
  width: 90%;
  height: auto;
  position: relative;
  left: 5%;
}
.desc{
  width: 100%;
  height: 30.4%;
}
.desc-head{
  width: 100%;
  height: 50rpx;
  display: flex;
}
.start{
  width: 100%;
  height: 12.1%;
}
.button{
  width: 90%;
  height: 70%;
  background: #ffc000;
  color: white;
  position: relative;
  top: 15%;

}