<view class='content'>
<!--考试标题  -->
  <view class='head'>{{item.title}}</view>
  <!--考试基本信息  -->
  <view class='basic'>
    <view class='inner'>
      <view class='total'>
        <view class='total-head'>试卷总分：</view>
        <view class='total-content'>{{item.total}}分</view>
      </view>
      <view class='pass'>
        <view class='pass-head'>及格分：</view>
        <view class='pass-content'>{{item.pass}}分</view>
      </view>
      <view class='count'>
        <view class='count-head'>总题数：</view>
        <view class='count-content'>{{item.count}}题</view>
      </view>
      <view class='length'>
        <view class='length-head'>考试时长：</view>
        <view class='length-content'>{{item.length}}分钟</view>
      </view>
    </view>
  </view>
  <!--考试时间  -->
  <view class='time'>
    <view class='time-head'>
      <view class='head-line'></view>
      <view class='middle'>考试时间</view>
      <view class='end-line'></view>
    </view>
    <view class='between'>{{item.startTime}}至{{item.endTime}}</view>
  </view>
  <!--考试说明  -->
  <view class='desc'>
    <view class='desc-head'>
      <view class='head-line'></view>
      <view class='middle'>考试说明</view>
      <view class='end-line'></view>
    </view>
    <view class='between'>{{item.desc}}</view>
  </view>
  <!--开始答题按钮  -->
  <view class='start'>
     <button class='button'>开始答题</button> 
  </view>
</view>