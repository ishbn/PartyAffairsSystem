.searchBox {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  position: absolute;
  top: 0rpx;
  background: #f5f5f5;
}

.content {
  width: 80%;
  height: 60%;
  display: flex;
  position: relative;
  bottom: -20%;
  background: #fff;
  border-radius: 10rpx;
}
.menu {
  width: 14.5%;
  height: 100%;
  display: inline-block;
}

.menu-image {
  position: relative;
  left: 25%;
  top: 25%;
  width: 50%;
  height: 55%;
}
.img {
  position: relative;
  left: 2%;
  top: 20%;
  width:9%;
  height:60%;
}

.ipt {
  font-size: 30rpx;
  position: relative;
  left:1%;
  width: 90%;
  height: 100%;
}
@keyframes display_show{
  from {
    transform: translateY(0rpx);
  }

  to {
    transform: translateY(100rpx);
  }
}
.display_show{
  background: white;
  float: left;
  animation: display_show 0.3s ease-in both;
  border: 1px solid;
  border-color: beige;
  position: fixed;
  width: 750rpx;
  z-index: 3;
}
.btn{
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  color:  #404040;
}
.display_none{
  display: none;
}
.shadow{
  width: 750rpx;
  height: 1100rpx;
  background: rgba(1, 1, 1, 0.2);
  position: absolute;
  top: 100rpx;
  z-index: 2;
}
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 32rpx;
  text-align: center;
  white-space: nowrap;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 0;
}

.tab-item {
  width: 25%;
  height: 80rpx;
  display: inline-block;
  z-index: 0;
}

.tab-item.active {
  color: #4675f9;
  position: relative;
  z-index: 0;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
  z-index: 0;
}
.swip{
  position: absolute;
  top: 180rpx;
  width: 750rpx;
  background: #e6e6e6;
}
.many{
  position: relative;
  left: 5%;
  width: 750rpx;
  height: 100%;
}
.one{
  width: 95%;
  height: 150rpx;
  display: flex;
  border-bottom: thin solid darkgrey;
}
.middle{
  background: white;
  width: 20%;
  height: 90%;
  border: thin solid darkgray;
  position: relative;
  top: 5%;
}
.middleImage{
  position: relative;
  left: 5%;
  top: 5%;
  width: 90%;
  height: 90%;
}
.front{
  width: 100rpx;
  height: 100rpx;
  font-size: 35rpx;
  color: blue;
  position: relative;
  word-break:break-all;
  top: 25rpx;
}
.behind{
  height: 70%;
  width: 54%;
  display: flex;
  flex-direction: column;
  position: relative;
  top: 15%;
  left: 3%;
}
.title{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
}
.corruptionType{
  font-size: 25rpx;
  color: darkgray;
  position: relative;
  top: 15rpx;
}
