<view class='main'>
  <view class='searchBox'>
    <view class='menu'>
    <!--菜单图标  -->
      <image class='menu-image' src='{{menu}}' bindtap="showitem"></image>
    </view>
    <!--搜索框  -->
    <view class='content'>
        <image class='img' src='/images/partySchool_icon/search.png' mode="aspectFit"></image>
      <input class='ipt' placeholder-style='font-size:40rpx;' placeholder='输入标题搜索' placeholder-style="font-size:30rpx;" confirm-type="search"></input>
    </view>
  </view>
      <!--下拉内容  -->
      <view class="{{open?'display_show':'display_none'}}">
        <button class='btn' size='mini' data-current="1" bindtap="clickTab">反腐动态</button>
        <button class='btn' size='mini' data-current="2" bindtap="clickTab">廉政时评</button>
        <button class='btn' size='mini' data-current="3" bindtap="clickTab">警钟长鸣</button>
      </view>
      <!--蒙层  -->
      <view class='shadow' hidden='{{!open}}' bindtap='hiddenShadow'></view>

  <!--可滑动菜单栏  -->
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
      <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">全部</view>
      <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">反腐动态</view>
      <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">廉政时评</view>
      <view class="tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">警钟长鸣</view>
    </scroll-view>
    <swiper class='swip' style="height:{{height}}rpx;" current="{{currentTab}}" bindchange="swiperTab">
      <swiper-item>
        <view class='many'>
          <view class='one' wx:for="{{corruption}}" wx:key="{{*this}}">
            <view class='front'>
              {{item.time}}
            </view>
            <view class='middle'>
              <image class='middleImage' src='{{item.middleImage}}'></image>
            </view>
            <view class='behind'>
              <view class='title'>{{item.title}}</view>
              <view class='corruptionType'>{{item.corruptionType}}</view>
            </view>
          </view>
        </view> 
      </swiper-item>
      <swiper-item>
        <view class='many'>
          <view class='one' wx:for="{{corruption}}" wx:key="{{*this}}" wx:if="{{item.corruptionType==='反腐动态'}}">
            <view class='front'>
              {{item.time}}
            </view>
            <view class='middle'>
              <image class='middleImage' src='{{item.middleImage}}'></image>
            </view>
            <view class='behind'>
              <view class='title'>{{item.title}}</view>
              <view class='corruptionType'>{{item.corruptionType}}</view>
            </view>
          </view>
        </view> 
      </swiper-item>
      <swiper-item>
        <view class='many'>
          <view class='one' wx:for="{{corruption}}" wx:key="{{*this}}" wx:if="{{item.corruptionType==='廉政时评'}}">
            <view class='front'>
              {{item.time}}
            </view>
            <view class='middle'>
              <image class='middleImage' src='{{item.middleImage}}'></image>
            </view>
            <view class='behind'>
              <view class='title'>{{item.title}}</view>
              <view class='corruptionType'>{{item.corruptionType}}</view>
            </view>
          </view>
        </view> 
      </swiper-item>
      <swiper-item>
        <view class='many'>
          <view class='one' wx:for="{{corruption}}" wx:key="{{*this}}" wx:if="{{item.corruptionType==='警钟长鸣'}}">
            <view class='front'>
              {{item.time}}
            </view>
            <view class='middle'>
              <image class='middleImage' src='{{item.middleImage}}'></image>
            </view>
            <view class='behind'>
              <view class='title'>{{item.title}}</view>
              <view class='corruptionType'>{{item.corruptionType}}</view>
            </view>
          </view>
        </view> 
      </swiper-item>
    </swiper>
  </view>