.main{
  display: flex;
  flex-wrap: wrap;
}
.searchBox {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #f5f5f5;
}

.content {
  width: 80%;
  height: 60%;
  display: flex;
  position: relative;
  bottom: -20%;
  background: #fff;
  border-radius: 10rpx;
}
.menu {
  width: 14.5%;
  height: 100%;
  display: inline-block;
}

.menu-image {
  position: relative;
  left: 25%;
  top: 25%;
  width: 50%;
  height: 55%;
}
.img {
  position: relative;
  left: 2%;
  top: 20%;
  width:9%;
  height:60%;
}

.ipt {
  font-size: 30rpx;
  position: relative;
  left:1%;
  width: 95%;
  height: 100%;
}
.clear{
  position: relative;
  right: 2%;
  top: 28%;
}
@keyframes display_show{
  from {
    transform: translateY(0rpx);
  }

  to {
    transform: translateY(100rpx);
  }
}
.display_show{
  background: white;
  display: flex;
  flex-wrap: wrap;
  animation: display_show 0.3s ease-in both;
  border: 1px solid;
  border-color: beige;
  position: absolute;
  width: 750rpx;
  z-index: 3;
}
.label{
  width: 150rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  border: thin solid darkgray;
  color: rgb(77, 72, 72);
  margin: 20rpx 15rpx;
}
.display_none{
  display: none;
}
.shadow{
  width: 750rpx;
  height: 1100rpx;
  background: rgba(1, 1, 1, 0.2);
  position: absolute;
  top: 100rpx;
  z-index: 2;
}
.under{
  width: 750rpx;
}
.view{
  width: 100%;
  height: 120rpx;
  background: white;
  border-bottom:thin solid #e6e6e6;
  display: flex;
  justify-content:center;
  align-items: center;
}
.inner{
  width: 90%;
  height:70%;
}
.law-image{
  padding-left: 600rpx;
  position: relative;
  top: -40rpx;
  width: 70rpx;
  height: 40rpx;
  z-index: 0;
}
.law-title{
  font-size: 30rpx;
  z-index: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.law-time{
  padding-top: 10rpx;
  font-size: 30rpx;
  float: left;
  color: darkgray;
}
.noMore{
  width: 750rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: darkgray;
  background: #eeeeee;
  text-align: center;
}
/* 记录为空时 */
.null{
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-img{
  width: 120rpx;
  height: 110rpx;
}
.null-text{
  font-size: 30rpx;
  color: #e6e6e6;
}