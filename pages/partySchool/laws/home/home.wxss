.main{
  display: flex;
  flex-wrap: wrap;
}
.searchBox {
  width: 750rpx;
  height: 100rpx;
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: 1.1fr 6.5fr;
  position: absolute;
  top: 0rpx;
  background: #f5f5f5;
}

.content {
  width: 95%;
  height: 60%;
  display: grid;
  grid-template-columns: 1fr 10fr;
  position: relative;
  bottom: -20%;
  background: #fff;
  border-radius: 10rpx;
}
.menu {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.menu-image {
  position: relative;
  left: 25%;
  top: 25%;
  width: 50%;
  height: 55%;
}
.img {
  position: relative;
  left: 3%;
  top: 20%;
  width:70%;
  height:60%;
}

.ipt {
  font-size: 30rpx;
  position: relative;
  height: 100%;
}
@keyframes display_show{
  from {
    transform: translateY(0rpx);
  }

  to {
    transform: translateY(100rpx);
  }
}
.display_show{
  background: white;
  display: block;
  animation: display_show 0.3s ease-in both;
  border: 1px solid;
  border-color: beige;
  width: 750rpx;
  height: 500rpx;
  position: fixed;
  z-index: 3;
}
.display_none{
  display: none;
}
.shadow{
  width: 750rpx;
  height: 1100rpx;
  background: rgba(1, 1, 1, 0.2);
  position: absolute;
  top: 100rpx;
  z-index: 2;
}
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 32rpx;
  text-align: center;
  white-space: nowrap;
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 0;
}

.tab-item {
  width: 25%;
  height: 80rpx;
  display: inline-block;
  z-index: 0;
}

.tab-item.active {
  color: #4675f9;
  position: relative;
  z-index: 0;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
  z-index: 0;
}
.swip{
  margin-top: 180rpx;
  width: 750rpx;
  z-index: 0;
}
.view{
  width: 100%;
  height: 150rpx;
  background: white;
  border-bottom: thin solid darkgray;
  z-index: 0;
  display: flex;
  justify-content:center;
  align-items: center;
}
.inner{
  width: 90%;
  height:70%;
}
.law-image{
  padding-left: 600rpx;
  position: relative;
  top: -40rpx;
  width: 70rpx;
  height: 40rpx;
  z-index: 0;
}
.law-title{
  font-size: 35rpx;
  z-index: 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.law-time{
  padding-top: 10rpx;
  font-size: 30rpx;
  float: left;
  color: darkgray;
  z-index: 0;
}