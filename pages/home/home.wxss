/* pages/home/home.wxss */
.index{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}
.swiper {
  height: 420rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.menu-wrp {
  width:100%;
  margin-top:20rpx;
}
.menu-wrp:after{
    content:"";
    display:block;
    clear:both;
}
.menu-list{
    float:left;
    width:20%;
    box-sizing: border-box;
    padding-bottom:10px;
}

.menu-img{
    /*width:120rpx;
    height:84rpx;*/
    width:32px;
    height:32px;
    display:block;
    margin:0 auto;
    margin-bottom:5px;

}
.menu-desc{
    background-color:#ffffff;
    color:#333333;
    width:100%;
    text-align: center;
    display:block;
    font-size:12px;
}
.gap-1,.gap-2{
    width:100%;
    height:8rpx;
    background:rgb(238, 238, 238);
}
.selection{
  width: 100%;
}

.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: lightgreen;
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}

.text-all{
  color: green;
  font-size: 15px;
}

.content{
  max-height: 425px;
  overflow-y: auto;
  border-bottom:2rpx solid rgb(238, 238, 238); 
}

.list_item{
    display: block;
    padding: 15px 15px 10px 10px;
    overflow: hidden;
    position: relative;
    cursor: default;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
}

.list_item_images{
    float: left;
    margin-right: 10px;
}
.list_item_images image{
    display: block;
    width: 80px;
    height: 60px;
}

.list_item_text{
  overflow: hidden;
}

.list_item_text-title{
    font-weight: normal;
    font-size: 16px;
    color: #000;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}

.list_item_text-date{
  font-size: 13px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.3;
  max-height: 36px\9;
}