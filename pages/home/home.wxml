<!--pages/home/home.wxml-->
<import src="/pages/common/template/article.wxml"/>
<view class="index">
  <!--首页轮播图-->
  <view class="headswiper">
    <swiper class="swiper" indicator-dots="true" autoplay="true" circular="true" interval="5000" duration="1000"> 
        <block wx:for="{{broadcast}}" wx:for-index="index" wx:key="*this">  
          <swiper-item>  
            <image src="{{item}}" class="slide-image" mode="aspectFill"/>  
          </swiper-item>  
        </block>  
    </swiper>  
  </view>

  <!--功能菜单-->
  <view  class="menu-wrp">
      <view class="menu-list" wx:for="{{menu.imgUrls}}" wx:key="*this">
          <image class="menu-img" src="{{item}}"></image>
          <view  class="menu-desc">{{menu.descs[index]}}</view>
      </view>
  </view>

  <!--灰色分割线0-->
  <view class="gap-1"></view >

  <!--简要新闻-->
  <!--判断新闻是否为空-->
  <block wx:if="{{list_news.length!=0}}">
    <view class='selection' >
          <view class='header'>
            <text>党建要闻</text>
            <navigator class='text-all'  url="/pages/news/news/news_list/news_list" >更多</navigator>
          </view>

          <!--遍历新闻列表-->
          <view class='content' wx:for='{{list_news}}' wx:key="*this">
              <template is="article_list_item" data='{{...item}}' />
          </view>
    </view>
  </block>
  <!--灰色分割线1-->
 <view class="gap-1"></view >
  
  <!--通知公告-->
  <!--判断通知公告是否为空-->
  <block wx:if="{{list_notices.length!=0}}">
    <view class='selection' >
          <view class='header'>
            <text>通知公告</text>
            <navigator class='text-all'  url="/pages/news/notices/notices_list/notices_list">更多</navigator>
          </view>

          <!--遍历通知公告-->
          <view class='content' wx:for='{{list_notices}}' wx:key="*this">
              <template is="notices_list_item" data='{{...item}}' />
        </view>
    </view>
  </block>
</view>